{
  "menu": {
    "template": "Add {item} to the menu under {category} for {price}",
    "required": ["item", "category", "price"],
    "defaults": {"category": "main course"}
  },
  "inventory": {
    "template": "Update inventory for {item} with quantity {quantity} and threshold {threshold}",
    "required": ["item", "quantity"],
    "defaults": {"threshold": 10}
  },
  "analytics": {
    "template": "Generate {report_type} report for {time_period}",
    "required": ["report_type", "time_period"],
    "defaults": {"time_period": "last 7 days"}
  },
  "support": {
    "template": "Create support ticket for {issue_type}: {description}",
    "required": ["issue_type", "description"],
    "defaults": {"priority": "medium"}
  },
  "raw_material": {
    "template": "Order {quantity} {unit} of {material} from {supplier}",
    "required": ["material", "quantity", "unit"],
    "defaults": {"unit": "kg"}
  }
}
